@model IEnumerable<ComicSystem.Models.Customer>

<h2>Danh sách khách hàng</h2>
<table class="table">
    <thead>
        <tr>
            <th>Tên khách hàng</th>
            <th>Số điện thoại</th>
            <th>Ngày đăng ký</th>
            <th>Hành động</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var customer in Model)
        {
            <tr>
                <td>@customer.FullName</td>
                <td>@customer.PhoneNumber</td>
                <td>@customer.RegistrationDate.ToString("dd/MM/yyyy")</td>
                <td>
                    <a href="@Url.Action("Details", "Customers", new { id = customer.CustomerID })" class="btn btn-info">Chi tiết</a>
                    <a href="@Url.Action("Edit", "Customers", new { id = customer.CustomerID })" class="btn btn-warning">Sửa</a>
                    <a href="@Url.Action("Delete", "Customers", new { id = customer.CustomerID })" class="btn btn-danger">Xóa</a>
                </td>
            </tr>
        }
    </tbody>
</table>
<a href="@Url.Action("Create", "Customers")" class="btn btn-primary">Thêm khách hàng</a>
